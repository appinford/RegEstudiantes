@page "{Id:Int?}"
@model MecanicApp.Pages.RegistroClientes.EditarModel
@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

Esta editando el cliente
<h2>@Model.Cliente.Nombres  </h2>

<form method="post">
    <input type="hidden" asp-for="Cliente.Id" />

    <div class="form-group">
        <label asp-for="Cliente.Nombres">Nombre</label>
        <input type="text" class="form-control" asp-for="Cliente.Nombres" />
        <span class="text-danger" asp-validation-for="Cliente.Nombres"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Apellidos">Apellidos</label>
        <input type="text" class="form-control" asp-for="Cliente.Apellidos" />
        <span class="text-danger" asp-validation-for="Cliente.Apellidos"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Cedula">Cedula</label>
        <input type="text" class="form-control" asp-for="Cliente.Cedula" />
        <span class="text-danger" asp-validation-for="Cliente.Cedula"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Direccion">Direccion</label>
        <input type="text" class="form-control" asp-for="Cliente.Direccion" />
        <span class="text-danger" asp-validation-for="Cliente.Direccion"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Sector">Sector</label>
        <input type="text" class="form-control" asp-for="Cliente.Sector" />
        <span class="text-danger" asp-validation-for="Cliente.Sector"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cliente.Ciudad">Ciudad</label>
        <input type="text" class="form-control" asp-for="Cliente.Ciudad" />
        <span class="text-danger" asp-validation-for="Cliente.Ciudad"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar Cambios</button>

</form>
<a class="btn btn-primary" asp-page="./RegistroClientes">Retornar</a>