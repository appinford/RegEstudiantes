@page
@model MecanicApp.Pages.RegistroClientes.RegistroClientesModel
@{
    ViewData["Title"] = "RegistroClientes";
}

<h1>Clientes</h1>

@if (!string.IsNullOrEmpty(Model.MensajeEliminacion))
{
    <label class="alert-info">@Model.MensajeEliminacion</label>
}

<form method="get">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="texto" asp-for="Texto">

        <div class="input-group-append">
            <button class="input-group-text" type="submit">Buscar Cliente</button>
        </div>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Cédula</th>
            <th>Dirección</th>
            <th>Sector</th>
            <th>Ciudad</th>
        </tr>
    </thead>
    @foreach (var clientes in Model.Clientes)
    {
        <tr>
            <td> @clientes.Id</td>
            <td> @clientes.Nombres</td>
            <td> @clientes.Apellidos</td>
            <td> @clientes.Cedula</td>
            <td> @clientes.Direccion</td>
            <td> @clientes.Sector</td>
            <td> @clientes.Ciudad</td>
            <td> <a asp-page="./DetalleCliente" asp-route-Id="@clientes.Id" class="btn btn-success" style="cursor:pointer">Ver detalle</a></td>
            <td> <a asp-page="./Editar" asp-route-Id="@clientes.Id" class="btn btn-warning" style="cursor:pointer">Editar</a></td>
            <td> <a asp-page="./Eliminar" asp-route-Id="@clientes.Id" class="btn btn-danger" style="cursor:pointer">Eliminar</a>  </td>
        </tr>

    }
</table>

<a asp-page="./Editar" class="btn btn-success">Nuevo</a>
